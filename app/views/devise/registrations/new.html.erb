<div class="contents row">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :nickname %> <em>(6 characters maxmam)</em><br />
      <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %><em>(6 characters minimum)</em><br />
      <% if @validatable %>
      <em>(<%= @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", minlength: "6" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
